// workflow parameters
params {
	
	// number of alleles in the IPD MHC database, found near the bottom right at https://www.ebi.ac.uk/ipd/mhc/allele/list/
	// last updated 2022-07-13
	allele_count = "12008"
	
	// number of alleles in the IPD KIR database, found near the bottom right at https://www.ebi.ac.uk/ipd/kir/alleles/
	// last updated 2022-07-13
	// params.allele_count = "1550"
	
	// immuno-whole-exome-sequencing (iWES) exemplar file
	iwes_exemplar = "$baseDir/resources/25525-Mamu-exon2-exemplar.fasta"
	
	// Illumina MiSeq Amplicon exemplar file
	miseq_exemplar = "$baseDir/resources/25533_Mamu_MiSeq_representative_alleles.fasta"

	// path for where to place workflow results (default is results/)
	results = "$baseDir/results"

}


// Docker settings
// NOTE: You must run `docker build --tag ipd-ref-generator:v1_0_5 config/` before the necessary container is available
// process.container = 'ipd-ref-generator:v1_0_5'
// docker {
// 	enabled = true
// 	temp = 'auto'
// 	runOptions = '-i -v $(pwd)/:/scratch -w /scratch'
// }


// Changing default DAG-visualizing configuration to true
dag {
	enabled = true
	// overwrite = true
	file = 'ipd-ref-gen-dag.png'
}


// Changing default to collecting run stats
timeline {
  enabled = true
  // overwrite = true
  file    = "${params.results}/timeline.html"
}

report {
  enabled = true
  // overwrite = true
  file    = "${params.results}/report.html"
}

trace {
  enabled = true
  // overwrite = true
  fields  = 'task_id,name,status,exit,realtime,%cpu,%mem,rss,vmem,peak_rss,peak_vmem,rchar,wchar'
  file    = "${params.results}/trace.txt"
}
